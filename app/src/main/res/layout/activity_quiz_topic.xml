<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/logiinbg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Quiz_topic">

    <ImageView
        android:id="@+id/quizid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/logoreg"
        />

    <LinearLayout android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/quizid"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        >
        <LinearLayout
            android:id="@+id/ScienceLayout"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:background="@drawable/round_back_white10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/science"
                />
            <TextView
                android:id="@+id/tvScience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Science"
                android:textColor="#CC000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
             />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/GeoLayout"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:background="@drawable/round_back_white10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/geography"
                />
            <TextView
                android:id="@+id/tvGeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Geography"
                android:textColor="#CC000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        >

        <LinearLayout
            android:id="@+id/LitLayout"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:background="@drawable/round_back_white10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/literature"
                />
            <TextView
                android:id="@+id/tvLiterature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Literature"
                android:textColor="#CC000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PopLayout"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:background="@drawable/round_back_white10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/popculture"
                />
            <TextView
                android:id="@+id/tvPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pop Culture"
                android:textColor="#CC000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
<Button
    android:id="@+id/BstartQuiz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Start Quiz"
    android:layout_below="@id/layout2"
    android:layout_marginTop="40dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:textSize="16sp"
    android:background="@drawable/custom_input"
    >
</Button>


</RelativeLayout>
